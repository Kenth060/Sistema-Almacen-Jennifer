                  <form action="/AddVendedor" method="post" class="needs-validation"novalidate>
                    <div class="mb-2">
                      <label for="nombre" class="form-label">Nombres</label>
                      <input
                        type="text"
                        class="form-control"
                        id="Tipo"
                        name="Tipo_vd"
                        placeholder="Tipo"
                        value="Vendedor"
                        hidden
                      />
                      <input
                        type="text"
                        class="form-control"
                        id="nombre"
                        name="Nombre_vd"
                        placeholder="Nombres"
                        required
                      />
                      <div
                        class="invalid-feedback"
                      >
                        Es necesario el Nombre
                      </div>
                    </div>
                    <div class="mb-2">
                      <label for="apellido" class="form-label">Apellidos</label>
                      <input
                        type="text"
                        class="form-control"
                        id="apellido"
                        name="Apellido_vd"
                        placeholder="Apellidos"
                        required
                      />
                      <div
                          class="invalid-feedback"
                        >
                          Es necesario el Apellido
                        </div>
                    </div>
                    <div class="mb-2">
                      <label for="Telefono" class="form-label">Telefono</label>
                      <input
                        type="number"
                        class="form-control"
                        id="Telefono"
                        name="Telefono_vd"
                        placeholder="Telefono"
                        required
                      />
                      <div
                          class="invalid-feedback"
                        >
                          Es necesario número teléfonico
                        </div>
                    </div>
                    <div class="mb-2">
                      <label for="Cedula" class="form-label">Cedula</label>
                      <input
                        type="text"
                        class="form-control"
                        id="Cedula"
                        name="Cedula_vd"
                        placeholder="Cedula"
                        required
                      />
                      <div
                          class="invalid-feedback"
                        >
                          Es necesario número de cédula
                        </div>
                    </div>
                    <div class="mb-1 position-relative">
                      <label for="Distrito_cl" class="form-label"
                        >Dirección</label
                      >
                      <select
                        id="selectDistritoVd"
                        class="form-select"
                        aria-label="Distrito"
                        name="Distrito_vd"
                        required
                      >
                        <option selected disabled value="">
                          Seleccionar Distrito...
                        </option>
                        <option value="I">I</option>
                        <option value="II">II</option>
                        <option value="III">III</option>
                        <option value="IV">IV</option>
                        <option value="V">V</option>
                        <option value="VI">VI</option>
                        <option value="VII">VII</option>
                      </select>
                      <div
                        class="invalid-feedback"
                      >
                        Es necesario el Distrito
                      </div>
                    </div>
                    <div class="mb-2 dx-2">
                      <label for="Residencia" class="form-label"
                        >Zona de Residencia</label
                      >
                      <input
                        type="text"
                        class="form-control"
                        id="Residencia"
                        name="Residencia_vd"
                        placeholder="Z. Residencia"
                        required
                      />
                      <div
                          class="invalid-feedback"
                        >
                          Es necesario la zona de residencia
                        </div>
                    </div>
                    <div class="mb-2">
                      <label for="PuntoReferencia" class="form-label"
                        >Punto de Referencia</label
                      >
                      <input
                        type="text"
                        class="form-control"
                        id="PuntoReferencia"
                        name="PuntoReferencia_vd"
                        placeholder="P. Referencia"
                        required
                      />
                      <div
                          class="invalid-feedback"
                        >
                          Solicitamos un punto de Referencia
                        </div>
                    </div>
                    <div class="mb-2">
                      <label for="Distancia" class="form-label">Distancia</label>
                      <input
                        type="text"
                        class="form-control"
                        id="Distancia"
                        name="Distancia_vd"
                        placeholder="Distancia"
                      />
                    </div>
                    <div class="mb-2">
                      <label for="casa" class="form-label">Numero de casa</label>
                      <input
                        type="text"
                        class="form-control"
                        id="casa"
                        name="Casa_vd"
                        placeholder="N. Casa"
                        required
                      />
                      <div
                          class="invalid-feedback"
                        >
                          Es necesario el número de Casa
                        </div>
                    </div>
                    <div class="d-grid gap-2">
                      <button type="submit" class="btn btn-success" title="Guardar">
                        Guardar
                      </button>
                      <a
                        class="btn btn-secondary mb-3"
                        title="Limpiar Campos"
                        onclick="Limpiar()"
                        >Limpiar Campos</a
                      >
                    </div>
                  </form>
                </div>
                <div class="py-3">
