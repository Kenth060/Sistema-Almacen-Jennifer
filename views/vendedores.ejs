  </head>
  <body>
    <%- include('sidebar.ejs') %> 
    <section class="home-section">
      <!-- Registro Colaboradores -->
      <div class="Container">
        
        <div class="col-sm-12 col-md-12 col-lg-12 col-xl-12">
          <div id="panelRegistroVendedor" class="panel-flotante panel-ancho" style="display: none">
            <div class="panel-content">
              <h2 class="fw-bold">Registrar un nuevo colaborador</h2>
        
              <div style="max-height: 300px; overflow-y: auto">
                <div class="col-sm-12 col-md-12 col-lg-12 col-xl-12">
                  
        
                  <form action="/AddColaborador" method="post" class="needs-validation"novalidate>
                    
                    <!-- Usuario -->
                    <div class="mb-2">
                      <label id="uservd_lb" for="uservd" class="form-label fw-bold" style="display: none;">Usuario del Colaborador</label>
                      <input id="uservd" name="uservd" class="form-control" placeholder="Nombre de Usuario" style="display: none;">
                    </div>

                    <!-- Nombres -->
                    <div class="mb-2">
                      <label for="nombre" class="form-label fw-bold">Nombres del Colaborador</label>
                      <input type="text" class="form-control" id="Nombre_vd" name="Nombre_vd" placeholder="Nombres" onchange="crearUsuario()"required />
                      <div class="invalid-feedback">Por favor Ingrese el nombre del Colaborador</div>
                    </div>

                    <!-- Apellidos -->
                    <div class="mb-2">
                      <label for="apellido" class="form-label fw-bold">Apellidos del Colaborador</label>
                      <input type="text" class="form-control" id="Apellido_vd" name="Apellido_vd" placeholder="Apellidos" onchange="crearUsuario()" required />
                      <div class="invalid-feedback">Por favor Ingrese el apellido del Colaborador</div>
                    </div>

                    <!-- Telefono -->
                    <div class="mb-2">
                      <label for="Telefono" class="form-label fw-bold">Telefono del Colaborador</label>
                      <input type="number" class="form-control" id="Telefono" name="Telefono_vd" placeholder="Telefono" required maxlength="8"/>
                      <div class="invalid-feedback">Por favor Ingrese el telefono del Colaborador</div>
                    </div>

                    <!-- Cedula -->
                    <div class="mb-2">
                      <label for="Cedula" class="form-label fw-bold">Cedula del Colaborador</label>
                      <input
                        type="text"
                        class="form-control"
                        id="Cedula"
                        name="Cedula_vd"
                        placeholder="Cedula"
                        required
                        onchange="crearUsuario()"/>
                      <div class="invalid-feedback">Por favor Ingrese la Cedula del Colaborador</div>
                    </div>

                    <!-- Cargo Colaborador -->
                    <div class="mb-1 position-relative">
                      <label for="Distrito_cl" class="form-label fw-bold" >Cargo del Colaborador</label>
                      <select
                        id="selectCargoC"
                        class="form-select mb-2"
                        aria-label="selectCargoC"
                        name="selectCargoC"
                        required
                      >
                        <option selected disabled value="">Seleccionar el Cargo...</option>
                        <option value="Vendedor">Vendedor</option>
                        <option value="Gerente">Gerente</option>
                        <option value="Sub-Gerente">Sub-Gerente</option>
                        <option value="Supervisor">Supervisor</option>
                      </select>
                      <div class="invalid-feedback">Por favor ingrese el Cargo</div>
                    </div>

                    <!-- Direccion y Distrito -->
                    <div class="mb-1 position-relative">
                      <h5 class="my-3 fw-bold">Dirección del Colaborador</h5> 
                      <label for="Distrito_cl" class="form-label fw-bold" >Distrito</label>
                      <select
                        id="selectDistritoVd"
                        class="form-select mb-2"
                        aria-label="Distrito"
                        name="Distrito_vd"
                        required
                      >
                        <option selected disabled value="">
                          Seleccionar el Distrito...
                        </option>
                        <option value="I">Distrito I</option>
                        <option value="II">Distrito II</option>
                        <option value="III">Distrito III</option>
                        <option value="IV">Distrito IV</option>
                        <option value="V">Distrito V</option>
                        <option value="VI">Distrito VI</option>
                        <option value="VII">DistritoVII</option>
                      </select>
                      <div class="invalid-feedback">Por favor ingrese el Distrito</div>
                    </div>
                    
                    <!-- Residencia -->
                    <div class="mb-2 dx-2">
                      <label for="Residencia" class="form-label fw-bold">Zona de Residencia</label>
                      <input
                        type="text"
                        class="form-control"
                        id="Residencia"
                        name="Residencia_vd"
                        placeholder="Z. Residencia"
                        required
                      />
                      <div class="invalid-feedback">Por favor ingrese la Zona de Residencia</div>
                    </div>

                    <!-- Punto referencia -->
                    <div class="mb-2">
                      <label for="PuntoReferencia" class="form-label fw-bold"
                        >Punto de Referencia</label
                      >
                      <input
                        type="text"
                        class="form-control"
                        id="PuntoReferencia"
                        name="PuntoReferencia_vd"
                        placeholder="P. Referencia"
                        required
                      />
                      <div class="invalid-feedback">Por favor ingrese el Punto de Referencia</div>
                        
                    </div>

                    <!-- Distancia -->
                    <div class="mb-2">
                      <label for="Distancia" class="form-label fw-bold">Distancia</label>
                      <input
                        type="text"
                        class="form-control"
                        id="Distancia"
                        name="Distancia_vd"
                        placeholder="Distancia"
                      />
                    </div>

                    <!-- Casa -->
                    <div class="mb-2">
                      <label for="casa" class="form-label fw-bold">Información de la casa</label>
                      <input
                        type="text"
                        class="form-control"
                        id="casa"
                        name="Casa_vd"
                        placeholder="N. Casa y/o color"
                        required
                      />
                      <div class="invalid-feedback">Por favor ingrese la información de la casa</div>
                    </div>

                    <div class="d-grid gap-2">
                      <button type="submit" class="btn btn-success" title="Guardar">
                        Guardar
                      </button>
                      <a
                        class="btn btn-secondary mb-3"
                        title="Limpiar Campos"
                        onclick="Limpiar()"
                        >Limpiar Campos</a
                      >
                    </div>
                  </form>

                </div>
                <div class="py-3">
                  <button
                    type="button"
                    class="btn btn-danger"
                    onclick="cerrarPanelRegistroVendedor()"
                  >
                    Cerrar
                  </button>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>

      <div class="Container px-3 py-1 contenedorventas">
        <div class="col-sm-12 col-md-12 col-lg-12 col-xl-12"></div>
        <h4>Listado y Registro de los Colaboradores</h4>
      </div>

      <div class="Container px-3">
        <div class="row">
          
          <div class="col-sm-12 col-md-12 col-lg-12 col-xl-12">
            <div class="px-3 py-2">
              <h4 style="display: flex; justify-content: space-between">
                Listado de Colaboradores

                <% if( UserRol == 'Gerente') { %>
                  <a class="btn btn-primary" onclick="abrirPanelReportes()">Generar Reporte de Vendedores</a> 
                <% } %>

                <button
                  type="button"
                  class="btn btn-success"
                  title="Historial"
                  onclick="mostrarPanelRegistroVendedor()"
                >
                  <i class="fa-solid fa-user-plus mx-2"></i></i>Registrar un nuevo colaborador
                </button>
              </h4>
            </div>
            <table class="table primary hover" id="TableVendedor">
                <thead>
                  <tr>
                    <th class="centrado">Cargo del Colaborador</th>
                    <th class="centrado">Nombre completo</th>
                    <th class="centrado">Cedula</th>
                    <th class="centrado">Telefono</th>
                    <th class="centrado">Dirección</th>
                    <th class="centrado">Estado</th>
                    <th class="centrado"></th>
                  </tr>
                </thead>
                <tbody>
                  <% vendedores.forEach((vendedor) => { %>
                    <tr>
                      <td class="centrado"> <%= vendedor.Tipo_Persona %></td>
                      <td class="centrado"> <%= vendedor.Nombre %></td>
                      <td class="centrado"><%= vendedor.Cedula %></td>
                      <td class="centrado"><%= vendedor.Telefono %></td>
                      <td class="centrado"><%= vendedor.Dirección %></td>
                      <td class="centrado"><%= vendedor.Estado %></td>
                      <td>
                        <!-- Botones de acciones -->
                        <a href="/EditColaborador/<%= vendedor.Id_Vendedor %>" class="btn btn-success mb-1" title="Actualizar"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil-square" viewBox="0 0 16 16">
                          <path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z"/>
                          <path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5z"/>
                        </svg> </a> 
                        <!-- <a href="#" class="btn btn-danger" title="Eliminar" onclick="confirmDeleteVendedor('<%= vendedor.Id_Vendedor %>')"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash" viewBox="0 0 16 16">
                          <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5m2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5m3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0z"/>
                          <path d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1zM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4zM2.5 3h11V2h-11z"/>
                        </svg> </a> -->
                    </td>
                    </tr>
                  <% }) %> 
                </tbody>
            </table>

            <div id="PanelReportes"class="panel-flotante panel-ancho"style="display: none">
              <div class="panel-content">
                <h3>Generar Reporte de un Vendedor</h3>
                <div class="container my-2">
                  <div class="card">
                      <div class="card-body">
                        <h5 class="card-title">Seleccione el Vendedor para el reporte</h5>

                          <form id="report-form" action="/ReporteVendedor" method="post">

                            <div class="form-group" id="Divselect-vendedor">
                              <select class="form-control my-3" id="select-vendedor" name="select_vendedor" onchange="updateVendedorName()">
                                <option value="0">Seleccione a un Vendedor</option>
                                <% vendedores.forEach((vendedor) => { %>
                                  <% if (vendedor.Tipo_Persona == 'Vendedor'){ %> 
                                    <option value="<%= vendedor.Id_Vendedor %>"><%= vendedor.Nombre %></option>
                                  <% } %> 
                                <% }) %> 
                              </select>
                              <input hidden name="vendedor_name" id="vendedor-name">
                            </div>

                            <h5 class="card-title">Seleccione el periodo de tiempo para el reporte</h5>

                            <div class="form-group">
                                <div class="form-check form-check-inline">
                                    <input class="form-check-input" type="radio" name="period" id="mes" value="mes">
                                    <label class="form-check-label" for="mes">Mes</label>
                                </div>
                                <div class="form-check form-check-inline">
                                    <input class="form-check-input" type="radio" name="period" id="semana" value="semana">
                                    <label class="form-check-label" for="semana">Semana</label>
                                </div>
                                <div class="form-check form-check-inline">
                                    <input class="form-check-input" type="radio" name="period" id="quincena" value="quincena">
                                    <label class="form-check-label" for="quincena">Quincena</label>
                                </div>
                                <div class="form-check form-check-inline">
                                    <input class="form-check-input" type="radio" name="period" id="rango-fechas" value="rango">
                                    <label class="form-check-label" for="rango-fechas">Rango de Fechas</label>
                                </div>
                            </div>

                            <div class="form-group" id="select-mes" style="display: none;">
                                <label for="mes-select">Seleccione el mes</label>
                                <select class="form-control" id="mes-select" name="mes-select">
                                    <!-- Opciones se agregarán dinámicamente -->
                                </select>
                            </div>

                            <div class="form-group" id="rango-fechas-inputs" style="display: none;">
                                <label for="fecha_inicio">Fecha de inicio</label>
                                <input type="date" class="form-control" id="fecha_inicio" name="fecha_inicio">
                                <label for="fecha_fin" class="mt-2">Fecha de fin</label>
                                <input type="date" class="form-control" id="fecha_fin" name="fecha_fin">
                            </div>
                            
                            <div class="mt-3">
                              <button type="submit" class="btn btn-info"><i class="fa-solid fa-file-pdf"></i> Generar Reporte</button>
                              <button type="button" class="btn btn-danger" onclick="cerrarPanelReportes()"><i class="fa-solid fa-xmark"></i> Cancelar </button>
                            </div>
                              
                          </form>
                      </div>
                  </div>
                </div>
                
                
              </div>
            </div>
          </div>


        </div>
      </div>
    </section>

    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="/resources/js/ScriptVendedor.js"></script>
    <script src="/resources/js/script.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
 
