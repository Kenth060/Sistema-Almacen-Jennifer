    <script>
      function AbrirConfig() 
      {
        var panel = document.getElementById("PanelConfig");
        panel.style.display = "block";
      }

      function cerrarConfig() 
      {
        var panel = document.getElementById("PanelConfig");
        panel.style.display = "none";
      }
    </script>

