  <body>
    <div class="sidebar">
      <div class="logo-details">
        <i class="bx bxl-c-plus-plus icon"></i>
        <div class="logo_name">Almacen Comercial Jennifer</div>
        <i class="bx bx-menu" id="btn"></i>
      </div>
      <ul class="nav-list">
        
        <!-- Inicio -->
        <li>
          <a href="/inicio">
            <i class="fa-solid fa-house fa-sm"></i>
            <span class="links_name">Inicio</span>
          </a>
          <span class="tooltip">Inicio</span>
        </li>

        <!-- Clientes -->
        <li>
          <a href="/clientes">
            <i class="fa-solid fa-user"></i>
            <span class="links_name">Clientes</span>
          </a>
          <span class="tooltip">Clientes</span>
        </li>

        <!-- Colaboradores -->
        <% if( UserRol == 'Gerente') { %>
          <li>
            <a href="/Colaboradores">
              <i class="fa-solid fa-id-card-clip"></i>
              <span class="links_name">Colaboradores</span>
            </a>
            <span class="tooltip">Colaboradores</span>
          </li>
        <% } %>

        <!-- Proveedores -->
        <% if( UserRol == 'Gerente') { %>
          <li>
            <a href="/Proveedores">
              <i class="fa-solid fa-shop"></i>
              <span class="links_name">Proveedores</span>
            </a>
            <span class="tooltip">Proveedores</span>
          </li>
        <% } %>
        
        <!-- Productos -->
        <li>
          <a href="/productos">
            <i class="fa-solid fa-bag-shopping"></i>
            <span class="links_name">Productos</span>
          </a>
          <span class="tooltip">Productos</span>
        </li>

        <!-- Compras -->
        <% if( UserRol == 'Gerente') { %>
          <li>
            <a href="/Compras">
              <i class="fa-solid fa-basket-shopping"></i>
              <span class="links_name">Compras</span>
            </a>
            <span class="tooltip">Compras</span>
          </li>
        <% } %>

        <!-- Ventas -->
        <li>
          <a href="/ventas">
            <i class="fa-solid fa-cart-shopping"></i>
            <span class="links_name">Ventas</span>
          </a>
          <span class="tooltip">Ventas</span>
        </li>


        <!-- Abonos -->
        <li>
          <a href="/abonos">
            <i class="fa-sharp fa-solid fa-money-bill-1-wave"></i>
            <span class="links_name">Abonos</span>
          </a>
          <span class="tooltip">Abonos</span>
        </li>

        <!-- Configuracion o Cerrar sesion -->
        <% if( UserRol == 'Gerente') { %>
          <!-- Configuracion -->
          <li>
            <a onclick="AbrirConfig()">
              <i class='bx bxs-cog' ></i>
              <span class="links_name">Opciones</span>
            </a>
            <span class="tooltip">Opciones</span>
          </li> 
        <% } else { %>
          <!-- Cerrar Sesion -->
          <li>
            <a onclick="confirmLogOut()">
              <i class='bx bx-log-out' ></i>
              <span class="links_name">Cerrar Sesión</span>
            </a>
            <span class="tooltip">Cerrar Sesión</span>
          </li>
        <% } %>





         

        <script>
          function confirmLogOut() 
          {
              Swal.fire({
                  title: '¿Está seguro?',
                  text: 'Esta a punto de cerrar sesión del sistema. ¿Está seguro?',
                  icon: 'warning',
                  showCancelButton: true,
                  confirmButtonColor: '#d33',
                  cancelButtonColor: '#3085d6',
                  confirmButtonText: 'Sí, Cerrar Sesión',
                  cancelButtonText: 'Cancelar'
              }).then((result) => {
                  if (result.isConfirmed) {
                      // Si el usuario confirma, redirecciona a la ruta de cerrar Sesion
                      window.location.href = '/logout';
                  }
              });
          }
        </script>

      </ul>
