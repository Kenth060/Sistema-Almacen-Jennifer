    <div id="PanelConfig" class="panel-flotante panel-ancho" style="display: none">
      <div class="panel-content">
        <h4 class="fw-bold">Opciones del Sistema</h4>
    
        <div style="max-height: 300px;">
          <div class="container">
            <div class="row justify-content-center">
              <div class="col-6 col-md-3 my-3 d-flex justify-content-center">
                <a type="button" class="btn btn-info" href="https://www.dropbox.com/scl/fi/toiekmhccjw6gfcbj0rqu/Manual-de-uso-Sistema-Almacen-Jenny.pdf?rlkey=swnm6rkt9c4xf32p9zgx3kgo1&st=4lw68n0k&dl=1" download>
                  <i class="fa-solid fa-book-open"></i> Manual de Uso
                </a>
              </div>
    
              <div class="col-6 col-md-3 my-3 d-flex justify-content-center">
                <a type="button" class="btn btn-success" id="backupButton" href="/respaldar">
                  <i class="fa-regular fa-floppy-disk"></i> Copia de Seguridad
                </a>
              </div>

              


    
              <div class="col-6 col-md-3 my-3 d-flex justify-content-center">
                <button type="button" class="btn btn-danger" onclick="confirmLogOut()">
                  <i class='bx bx-log-out'></i> Cerrar la Sesión
                </button>
              </div>
            </div>
          </div>
        </div>
        
        <button type="button" class="btn btn-primary mx-2" onclick="cerrarConfig()">Cerrar Configuración</button>
      </div>
    </div>
    


