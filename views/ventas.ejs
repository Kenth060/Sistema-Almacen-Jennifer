                                            <td class="row px-4 centrado">
                                              <!-- Botones de acciones -->
                                              <!-- <input type="number" class="centrado mb-2"/> -->
                                              <button type="button" onclick="AñadirProducto('<%= producto.Id_Producto %>','<%= producto.Tipo %> <%= producto.Marca %> Color <%= producto.Color %>','<%= producto.Precio_Venta %>', '<%= producto.Existencia%>')" class="btn btn-success px-3" title="Añadir Producto"><i class="fa-solid fa-cart-plus"></i></button>
                                            </td>
                                          </tr>
                                        <% } %>
                                      <% }) %>
                                    </tbody>
                                  </table>
                                </div>

                                <div id="tablaCalzado" style="display: none">
                                  <table class="table primary" id="tableCalzado">
                                    <thead>
                                      <tr>
                                        <th class="centrado">Nombre del producto</th>
                                        <th class="centrado">Marca</th>
                                        <th class="centrado">Color</th>
                                        <th class="centrado">Talla</th>
                                        <th class="centrado">Existencia</th>
                                        <th class="centrado">Precio</th>
                                        <th class="centrado"><!-- Acción --></th>
                                      </tr>
                                    </thead>
                                    <tbody>
                                      <% productos.forEach((producto) => { %>
                                        <% if( producto.Categoria == 'Calzado' && producto.Existencia > 0 ) { %>
                                          <tr>
                                            <td class="centrado"><%= producto.Tipo %> <%= producto.Modelo %></td>
                                            <td class="centrado"><%= producto.Marca %></td>
                                            <td class="centrado"><%= producto.Color %></td>
                                            <td class="centrado"><%= producto.Talla %></td>
                                            <td class="centrado"><%= producto.Existencia %></td>
                                            <td class="centrado">C$ <%= producto.Precio_Venta %></td>
                                            <td class="row px-4 centrado">
                                              <!-- Botones de acciones -->
                                              <!-- <input type="number" class="centrado mb-2"/> -->
                                              <button type="button" onclick="AñadirProducto('<%= producto.Id_Producto %>','<%= producto.Tipo %> <%= producto.Modelo %> <%= producto.Marca %> Color <%= producto.Color %> Talla <%= producto.Talla %>','<%= producto.Precio_Venta %>','<%= producto.Existencia%>')" class="btn btn-success px-3" title="Añadir Producto"><i class="fa-solid fa-cart-plus"></i></button>
