  </head>
  <body>
    <%- include('sidebar.ejs') %>

    <section class="home-section">
      <div class="Container">
        <div class="row">
          <div class="Container px-3 py-1 contenedorventas">
            <div class="col-sm-12 col-md-12 col-lg-12 col-xl-12">
              <h2 class="centrado">Registro e historial de</h2>
              <h2 class="centrado">ventas</h2>
            </div>
          </div>

          <div class="Container">
            <div class="col-sm-12 col-md-12 col-lg-12 col-xl-12">
              <div class="row">
                <div class="accordion accordion-flush py-0" id="accordionFlushExample">
                  <div class="accordion-item">
                    <h2 class="accordion-header">
                      <button
                        class="accordion-button collapsed contenedorventas"
                        type="button"
                        data-bs-toggle="collapse"
                        data-bs-target="#flush-collapseOne"
                        aria-expanded="false"
                        aria-controls="flush-collapseOne">
                        <h5>REGISTRAR UNA NUEVA VENTA</h5>
                      </button>
                    </h2>
                    <div id="flush-collapseOne" class="accordion-collapse collapse" data-bs-parent="#accordionFlushExample">
                      <div class="accordion-body">
                        <div class="Container">
                          <div class="row">
                            <div class="col-sm-12 col-md-4 col-lg-4 col-xl-4">
                              <h6 class="px-2"> Por favor seleccione el tipo de venta</h6>
                              <select class="form-select" id="TipoDeVenta_Select" onchange="TipoVenta()">
                                <option selected>Seleccione una venta</option>
                                <option value="Contado">Venta Contado</option>
                                <option value="Credito">Venta Credito</option>
                              </select>
                            
                              <!-- Formulario para Venta  -->
                              <div id="formularioCredito" style="display: none">
                                <form class="px-3 needs-validation" novalidate>

                                  <label for="CedulaCliente" class="form-label mt-2" >Digite la Cedula del cliente</label>
                                  <div class="input-group mb-3">
                                    <input class="form-control" type="text" id="CedulaCliente" placeholder="Escribe para buscar..." required/>
                                    <div class="invalid-feedback">El Campo es requerido</div>
                                    <button class="btn btn-outline-success" type="button" id="btnBuscarCliente" onclick="BuscarCliente()"><i class='bx bx-search'></i></button>
                                  </div>

                                  <div class="mb-3">
                                    <p class="text-success" id="client_name"  style="font-weight: bold;" hidden></p>
                                  </div>
            
                                  <label for="CedulaVendedor" class="form-label" >Digite la Cedula del vendedor</label>
                                  <div class="input-group mb-3">
                                    <input  class="form-control" type="text" list="datalistOptions" id="CedulaVendedor" placeholder="Escribe para buscar..." required/>
                                    <div class="invalid-feedback">El Campo es requerido</div>
                                    <button class="btn btn-outline-success" type="button" id="btnBuscarVendedor" onclick="BuscarVendedor()"><i class='bx bx-search'></i></button>
                                  </div>

                                  <div class="mb-3">
                                    <p class="text-success" id="vendedor_name" hidden style="font-weight: bold;"></p>
                                  </div>
                                     
                                  <div class="mb-3">
                                    <label for="Fecha_Venta" class="form-label">Ingrese la fecha de venta</label>
                                    <input type="date" class="form-control" id="Fecha_Venta" placeholder="Ingrese la fecha" onchange="ActualizarFecha()" required/>
                                    <div class="invalid-feedback">El Campo es requerido</div>
                                  </div>

                                  <div class="mb-3">
                                    <label for="plazo_compra" id="lb_plazo_compra" class="form-label">Plazo de Compra</label>
                                    <input type="text" class="form-control" id="plazo_compra" placeholder="Ingrese plazo de compra" required/>
                                    <div class="invalid-feedback">El Campo es requerido</div>
                                  </div>

                                  <div class="mb-3">
                                    <label for="FrecuenciaAbono" class="form-label" id="lb_FrecuenciaAbono" >Seleccionar la frecuencia de abonos</label>
                                    <select class="form-select" id="FrecuenciaAbono" aria-label="" required>
                                      <label for="FrecuenciaAbono" class="form-label">Seleccione la frecuencia de abonos</label>
                                      <option selected value=""> Seleccione una opcion</option>
                                      <option value="Semanal">Semanal</option>
                                      <option value="Quincenal">Quincenal</option>
                                      <option value="Mensual">Mensual</option>
                                    </select>
                                    <div class="invalid-feedback">El Campo es requerido</div>
                                  </div>

                                  <div class="mb-3">
                                    <label for="text" class="form-label">Seleccionar categoria del producto a añadir</label>
                                    <select class="form-select" id="categoriaSelect1" onchange="mostrarTablaSegunCategoria1()">
                                      <label for="Categoria" class="form-label">Seleccione la categoria del producto que desea</label>
                                      <option selected>
                                        Seleccione una categoria
                                      </option>
                                      <option value="1">Calzado</option>
                                      <option value="2">
                                        Prendas de Vestir
                                      </option>
                                      <option value="3">Cosmeticos</option>
                                      <option value="4">
                                        Electrodomestico
                                      </option>
                                      <option value="5">
                                        Productos Plasticos
                                      </option>
                                    </select>
                                  </div>

                                </form>
                              </div>
                            </div>

                            <!--Mostrar tablas segun la seleccion-->
                            <div class="col-sm-12 col-md-8 col-lg-8 col-xl-8">
                              <div class="row">
                                <div id="tablaCalzado" style="display: none">
                                  <table class="table primary">
                                    <thead>
                                      <tr>
                                        <th class="centrado">Nombre del producto</th>
                                        <th class="centrado">Marca</th>
                                        <th class="centrado">Color</th>
                                        <th class="centrado">Talla</th>
                                        <th class="centrado">Existencia</th>
                                        <th class="centrado">Precio</th>
                                        <th class="centrado col-xl-1"><!-- Acción --></th>
                                      </tr>
                                    </thead>

                                    <tbody>
                                      <% productos.forEach((producto) => { %>
                                        <% if( producto.Categoria == 'Calzado' ) { %>
                                          <tr>
                                            <td class="centrado"><%= producto.Tipo %> <%= producto.Modelo %></td>
                                            <td class="centrado"><%= producto.Marca %></td>
                                            <td class="centrado"><%= producto.Color %></td>
                                            <td class="centrado"><%= producto.Talla %></td>
                                            <td class="centrado"><%= producto.Existencia%></td>
                                            <td class="centrado">C$ <%= producto.Precio %></td>
                                            <td class="centrado"></td>
                                            <td class="row px-2">
                                              <!-- Botones de acciones -->
                                             <!--  <input id="CantProduct" type="number" class="centrado mb-2"/> -->
                                              <button type="button" onclick="AñadirProducto('<%= producto.Id_Producto %>','<%= producto.Tipo %> <%= producto.Modelo %> <%= producto.Marca %> Color <%= producto.Color %> Talla <%= producto.Talla %>','<%= producto.Precio %>','<%= producto.Existencia%>')" class="btn btn-success px-3" title="Añadir Producto"><i class="fa-solid fa-cart-plus"></i></button>
                                            </td>
                                          </tr>
                                        <% } %>
                                      <% }) %>
                                    </tbody>
                                  </table>
                                </div>

                                <div id="tablaPrendas" style="display: none">
                                  <table class="table primary">
                                    <thead>
                                      <tr>
                                        <th class="centrado">Nombre del producto</th>
                                        <th class="centrado">Marca</th>
                                        <th class="centrado">Color</th>
                                        <th class="centrado">Talla</th>
                                        <th class="centrado">Existencia</th>
                                        <th class="centrado">Precio</th>
                                        <th class="centrado col-1"><!-- Acción --></th>
                                      </tr>
                                    </thead>
                                    <tbody>
                                      <% productos.forEach((producto) => { %>
                                        <% if( producto.Categoria == 'Prendas de Vestir' ) { %>
                                          <tr>
                                            <td class="centrado"><%= producto.Tipo %></td>
                                            <td class="centrado"><%= producto.Marca %></td>
                                            <td class="centrado"><%= producto.Color %></td>
                                            <td class="centrado"><%= producto.Talla %></td>
                                            <td class="centrado"><%= producto.Existencia %></td>
                                            <td class="centrado">C$ <%= producto.Precio %></td>
                                            <td class="row px-4 centrado">

                                              <!-- Botones de acciones -->
                                              <!-- <input type="number" class="centrado mb-2"/> -->
                                              <button type="button" onclick="AñadirProducto('<%= producto.Id_Producto %>','<%= producto.Tipo %> <%= producto.Marca %> Color <%= producto.Color %> Talla <%= producto.Talla %>','<%= producto.Precio %>', '<%= producto.Existencia%>')" class="btn btn-success px-3" title="Añadir Producto"><i class="fa-solid fa-cart-plus"></i></button>
                                            </td>
                                          </tr>
                                        <% } %>
                                      <% }) %>
                                    </tbody>
                                  </table>
                                </div>

                                <div id="tablaCosmeticos" style="display: none">
                                  <table class="table primary">
                                    <thead>
                                      <tr>
                                        <th class="centrado">Nombre del producto</th>
                                        <th class="centrado">Marca</th>
                                        <th class="centrado">Color</th>
                                        <th class="centrado">Existencia</th>
                                        <th class="centrado">Precio</th>
                                        <th class="centrado col-1"><!-- Acción --></th>
                                      </tr>
                                    </thead>
                                    <tbody>
                                      <% productos.forEach((producto) => { %>
                                        <% if( producto.Categoria == 'Cosmeticos' ) { %>
                                          <tr>
                                            <td class="centrado"><%= producto.Clasificacion %> <%= producto.Tipo %></td>
                                            <td class="centrado"><%= producto.Marca %></td>
                                            <td class="centrado"><%= producto.Color %></td>
                                            <td class="centrado"><%= producto.Existencia %></td>
                                            <td class="centrado">C$ <%= producto.Precio %></td>
                                            <td class="row px-4 centrado">
                                              <!-- Botones de acciones -->
                                              <!-- <input type="number"class="centrado mb-2"/> -->
                                              <button type="button" onclick="AñadirProducto('<%= producto.Id_Producto %>','<%= producto.Clasificacion %> <%= producto.Tipo %> <%= producto.Marca %> <%= producto.Color %> ','<%= producto.Precio %>', '<%= producto.Existencia%>')" class="btn btn-success px-3" title="Añadir Producto"><i class="fa-solid fa-cart-plus"></i></button>
                                            </td>
                                          </tr>
                                        <% } %>
                                      <% }) %>
                                    </tbody>
                                  </table>
                                </div>

                                <div id="tablaElectrodomesticos" style="display: none">
                                  <table class="table primary">
                                    <thead>
                                      <tr>
                                        <th class="centrado">Nombre del producto</th>
                                        <th class="centrado">Marca</th>
                                        <th class="centrado">Modelo</th>
                                        <th class="centrado">Color</th>
                                        <th class="centrado">Existencia</th>
                                        <th class="centrado">Precio</th>
                                        <th class="centrado col-1"><!-- Acción --></th>
                                      </tr>
                                    </thead>
                                    <tbody>
                                      <% productos.forEach((producto) => { %>
                                        <% if( producto.Categoria == 'Electrodomesticos' ) { %>
                                          <tr>
                                            <td class="centrado"><%= producto.Tipo %></td>
                                            <td class="centrado"><%= producto.Marca %></td>
                                            <td class="centrado"><%= producto.Modelo %></td>
                                            <td class="centrado"><%= producto.Color %></td>
                                            <td class="centrado"><%= producto.Existencia %></td>
                                            <td class="centrado">C$ <%= producto.Precio %></td>
                                            <td class="row px-4 centrado">
                                              <!-- Botones de acciones -->
                                              <!-- <input type="number" class="centrado mb-2"/> -->
                                              <button type="button" onclick="AñadirProducto('<%= producto.Id_Producto %>','<%= producto.Tipo %> <%= producto.Marca %> <%= producto.Modelo %> Color <%= producto.Color %>','<%= producto.Precio %>', '<%= producto.Existencia%>')" class="btn btn-success px-3" title="Añadir Producto"><i class="fa-solid fa-cart-plus"></i></button>
                                            </td>
                                          </tr>
                                        <% } %>
                                      <% }) %>
                                    </tbody>
                                  </table>
                                </div>

                                <div id="tablaPPlasticos" style="display: none">
                                  <table class="table primary">
                                    <thead>
                                      <tr>
                                        <th class="centrado">Nombre del producto</th>
                                        <th class="centrado">Marca</th>
                                        <th class="centrado">Color</th>
                                        <th class="centrado">Dimensiones</th>
                                        <th class="centrado">Existencia</th>
                                        <th class="centrado">Precio</th>
                                        <th class="centrado"><!-- Acción --></th>
                                      </tr>
                                    </thead>
                                    <tbody>
                                      <% productos.forEach((producto) => { %>
                                        <% if( producto.Categoria == 'Productos Plasticos' ) { %>
                                          <tr>
                                            <td class="centrado"><%= producto.Tipo %></td>
                                            <td class="centrado"><%= producto.Marca %></td>
                                            <td class="centrado"><%= producto.Color %></td>
                                            <td class="centrado"><%= producto.Dimensiones %></td>
                                            <td class="centrado"><%= producto.Existencia %></td>
                                            <td class="centrado">C$ <%= producto.Precio %></td>
                                            <td class="row px-4 centrado">
                                              <!-- Botones de acciones -->
                                              <!-- <input type="number" class="centrado mb-2"/> -->
                                              <button type="button" onclick="AñadirProducto('<%= producto.Id_Producto %>','<%= producto.Tipo %> <%= producto.Marca %> Color <%= producto.Color %>','<%= producto.Precio %>', '<%= producto.Existencia%>')" class="btn btn-success px-3" title="Añadir Producto"><i class="fa-solid fa-cart-plus"></i></button>
                                            </td>
                                          </tr>
                                        <% } %>
                                      <% }) %>
                                    </tbody>
                                  </table>
                                </div>
                              </div>
                            </div>
                          </div>
                        </div>

                        <div class="Container" id="factura" style="display: none">
                          <div class="row">
                            <div class="col-sm-12 col-md-2 col-lg-2 col-xl-2"></div>
                            <div class="col-sm-12 col-md-8 col-lg-8 col-xl-8">
                              <table class="table" id="tablacliente">
                                <thead>
                                  <tr>
                                    <th id="IdVenta" class="centrado">N° Venta:</th>
                                    <th class="centrado"></th>
                                    <th></th>
                                    <th class="centrado"></th>
                                    <th class="centrado"></th>
                                  </tr>
                                  <tr>
                                    <th class="centrado">Cliente</th>
                                    <th class="centrado">Vendedor</th>
                                    <th></th>
                                    <th></th>
                                    <th class="centrado">Fecha Venta</th>
                                  </tr>
                                </thead>
                                <tbody>
                                  <tr>
                                    <td class="centrado" id="ClienteFactura">Nombre del Cliente</td>
                                    <td class="centrado" id="VendedorFactura">Nombre del Vendedor</td>
                                    <td></td>
                                    <td></td>
                                    <td class="centrado" id="FechatablaFactura">Fecha Venta</td>
                                  </tr>
                                  <thead>
                                    <tr>
                                      <th class="centrado">Producto</th>
                                      <th class="centrado">Cantidad Producto</th>
                                      <th class="centrado">Precio</th>
                                      <th class="centrado">Sub Total</th>
                                      <th class="centrado"></th>
                                    </tr>
                                  </thead>
                                </tbody>

                                <tbody>
                                </tbody>
                                <thead>
                                  <th></th>
                                  <th></th>
                                  <th></th>
                                  <th></th>
                                  <th class="centrado">Total</th>
                                </thead>
                                <tbody>
                                  <td></td>
                                  <td></td>
                                  <td></td>
                                  <td></td>
                                  <td class="centrado" id="celda_total">C$ 0</td>
                                </tbody>
                              </table>

                              <div class="centrado text-end" id="btnfactura">
                                <button class="btn btn-success" onclick="AñadirVenta()">Guardar Venta</button>
                              </div>
                            </div>
                            <div class="col-sm-12 col-md-2 col-lg-2 col-xl-2"></div>
                          </div>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>

              <div class="py-1 px-3" style="display: flex; align-items: center; justify-content: space-between;">
                <h4 style="color: black; font-size: 22px">Listado de Ventas</h4>
                <div style="display: flex; align-items: center">
                  <select onchange="Filtrar()" id="filtroTipoVenta"  class="form-select" aria-label="Default select example" style="background-color: rgb(128, 192, 128); color: white; width: 180px; padding: 6px;">
                    <option selected>Filtrar tipo de venta</option>
                    <option value="Contado">Ventas al contado</option>
                    <option value="Credito">Ventas al crédito</option>
                    <option value="Todas">Mostrar todas las Ventas</option>
                  </select>
                  <!-- <button type="button" class="btn btn-success" title="Abonar" style="margin-left: 10px" onclick="mostrarPanelHistorialAbonos()"><i class="fa-solid fa-list"></i>Listar historial de abonos</button>-->
                </div>
              </div>

              <script>
                function Filtrar() 
                {
                    const Filtro = document.getElementById('filtroTipoVenta').value;
                    // Redirigir a la misma página, pasando el filtro como parámetro en la URL
                    window.location.href = '/ventas?tipoVenta=' + Filtro;
                }
              </script>

              <nav class="navbar bg-body-tertiary">
                <div class="container-fluid">
                  <a class="navbar-brand px-3">Buscar una venta</a>
                  <form class="d-flex" role="search">
                    <input class="form-control me-2" type="search" placeholder="Buscar..." aria-label="Search"/>
                    <button class="btn btn-outline-success" type="submit">Buscar</button>
                  </form>
                </div>
              </nav>

              <div class="Container">
                <div class="row">
                  <div>
                    <table class="table primary px-3">
                      <thead>
                        <tr>
                          <th class="centrado">Tipo de venta <%= Tipo %></th>
                          <th class="centrado">Nombre del cliente</th>
                          <th class="centrado">Nombre de vendedor</th>
                          <th class="centrado">Fecha de venta</th>
                          <th class="centrado">Cantidad total</th>
                          <th class="centrado"></th>
                        </tr>
                      </thead>
                      <tbody>
                        <% ventas.forEach((Venta) => { %>
                          <% if (Tipo == 'Todas' || Tipo == null ) { %>
                            <tr>
                              <td class="centrado">Venta al <%= Venta.Tipo_Venta %></td>
                              <td class="centrado"><%= Venta.Cliente %></td>
                              <td class="centrado"><%= Venta.Vendedor %></td>
                              <td class="centrado"><%= Venta.Fecha_Venta %></td>
                              <td class="centrado">C$ <%= Venta.Total_Venta %></td>
                              <td class="centrado">
                                <button
                                  type="button"
                                  class="btn btn-success info-venta"
                                  title="Informacion de la venta"
                                  onclick="mostrarDetallesVenta('<%= Venta.Id_Venta %>','<%= Venta.Cliente %>','<%= Venta.Vendedor %>','<%= Venta.Fecha_Venta %>','<%= Venta.Total_Venta %>')">
                                  <i class="fa-solid fa-money-check-dollar"></i>
                                </button>
    
                              </td>
                            </tr>
                          <% } else if(Tipo == 'Credito' && Venta.Tipo_Venta == 'Credito' ){ %>
                            <tr>
                              <td class="centrado">Venta al <%= Venta.Tipo_Venta %></td>
                              <td class="centrado"><%= Venta.Cliente %></td>
                              <td class="centrado"><%= Venta.Vendedor %></td>
                              <td class="centrado"><%= Venta.Fecha_Venta %></td>
                              <td class="centrado">C$ <%= Venta.Total_Venta %></td>
                              <td class="centrado">
                                <button
                                  type="button"
                                  class="btn btn-success info-venta"
                                  title="Informacion de la venta"
                                  onclick="mostrarDetallesVenta('<%= Venta.Id_Venta %>','<%= Venta.Cliente %>','<%= Venta.Vendedor %>','<%= Venta.Fecha_Venta %>','<%= Venta.Total_Venta %>')">
                                  <i class="fa-solid fa-money-check-dollar"></i>
                                </button>
    
                              </td>
                            </tr>
                          <% } else if(Tipo == 'Contado' && Venta.Tipo_Venta == 'Contado' ){ %>
                            <tr>
                              <td class="centrado">Venta al <%= Venta.Tipo_Venta %></td>
                              <td class="centrado"><%= Venta.Cliente %></td>
                              <td class="centrado"><%= Venta.Vendedor %></td>
                              <td class="centrado"><%= Venta.Fecha_Venta %></td>
                              <td class="centrado">C$ <%= Venta.Total_Venta %></td>
                              <td class="centrado">
                                <button
                                  type="button"
                                  class="btn btn-success info-venta"
                                  title="Informacion de la venta"
                                  onclick="mostrarDetallesVenta('<%= Venta.Id_Venta %>','<%= Venta.Cliente %>','<%= Venta.Vendedor %>','<%= Venta.Fecha_Venta %>','<%= Venta.Total_Venta %>')">
                                  <i class="fa-solid fa-money-check-dollar"></i>
                                </button>
    
                              </td>
                            </tr>
                          <% }%>
                        <% }) %>
                      </tbody>
                    </table>
                  </div>
                </div>
              </div>

              <div id="panelHistorialAbonos" class="panel-flotante" style="display: none">
                <div class="panel-content">
                  <h4>Historial de abonos</h4>
                  <nav class="navbar bg-body-tertiary">
                    <div class="container-fluid">
                      <a class="navbar-brand px-3">Buscar nombre del cliente</a>
                      <form class="d-flex" role="search">
                        <input
                          class="form-control me-2"
                          type="search"
                          placeholder="Buscar..."
                          aria-label="Search"
                        />
                        <button class="btn btn-outline-success" type="submit">
                          Buscar
                        </button>
                      </form>
                    </div>
                  </nav>
                  <div style="max-height: 300px; overflow-y: auto">
                    <table class="table primary">
                      <thead>
                        <tr>
                          <th class="centrado">Nombre del cliente</th>
                          <th class="centrado">Nombre del vendedor</th>
                          <th class="centrado">Fecha del abono realizado</th>
                          <th class="centrado">Monto abonado</th>
                          <th class="centrado">Saldo restante</th>
                        </tr>
                      </thead>
