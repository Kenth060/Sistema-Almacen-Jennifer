              <div class="py-1 px-3 mb-2" style="display: flex; align-items: center; justify-content: space-between;">
                <h4 style="color: black; font-size: 22px">Listado de Ventas</h4>

                <% if( UserRol == 'Gerente') { %>
                  <a class="btn btn-primary" onclick="abrirPanelReportes()">Generar Reporte ventas</a> 
                <% } %>
                

                <div style="display: flex; align-items: center">

                  <select onchange="Filtrar()" id="filtroTipoVenta"  class="form-select" aria-label="Default select example" style="background-color: rgb(128, 192, 128); color: white;">
                    <option selected>Filtrar tipo de venta</option>
                    <option value="Contado">Ventas al contado</option>
                    <option value="Credito">Ventas al crédito</option>
                    <option value="Todas">Mostrar todas las Ventas</option>
                  </select>
                  <!-- <button type="button" class="btn btn-success" title="Abonar" style="margin-left: 10px" onclick="mostrarPanelHistorialAbonos()"><i class="fa-solid fa-list"></i>Listar historial de abonos</button>-->
                </div>
              </div>

              <script>
                function Filtrar() 
                {
                    const Filtro = document.getElementById('filtroTipoVenta').value;
                    // Redirigir a la misma página, pasando el filtro como parámetro en la URL
                    window.location.href = '/ventas?tipoVenta=' + Filtro;
                }
              </script>

              <div class="Container">
                <div class="row">
                  <div>
                    <table class="table primary px-3 hover" id="TableVentas">
                      <thead>
                        <tr>
                          <th class="centrado">Tipo de venta</th>
                          <th class="centrado">Nombre del cliente</th>
                          <th class="centrado">Nombre de vendedor</th>
                          <th class="centrado">Fecha de venta</th>
                          <th class="centrado">Cantidad total</th>
                          <th class="centrado">Estado de la Venta</th>
                          <th class="centrado"></th>
                        </tr>
                      </thead>
                      <tbody>
                        <% ventas.forEach((Venta) => { %>
                          <% if (Tipo == 'Todas' || Tipo == null ) { %>
                            <tr>
                              <td class="centrado">Venta al <%= Venta.Tipo_Venta %></td>
                              <td class="centrado"><%= Venta.Cliente %></td>
                              <td class="centrado"><%= Venta.Vendedor %></td>
                              <td class="centrado"><%= Venta.Fecha_Venta %></td>
                              <td class="centrado">C$ <%= Venta.Total_Venta %></td>
                              <td class="centrado"><%= Venta.Estado_Venta %></td>
                              <td class="centrado">
                                <div class="d-flex align-items-center justify-content-center">
                                  <button
                                    type="button"
                                    class="btn btn-success info-venta mx-1"
                                    title="Informacion de la venta"
                                    onclick="mostrarDetallesVenta('<%= Venta.Id_Venta %>','<%= Venta.Cliente %>','<%= Venta.Vendedor %>','<%= Venta.Fecha_Venta %>','<%= Venta.Total_Venta %>')">
                                    <i class="fa-solid fa-money-check-dollar"></i>
                                  </button>

                                  <% if (  Venta.Tipo_Venta  == 'Credito') { %>
                                    <button 
                                      type="button" 
                                      class="btn btn-primary mx-1" 
                                      title="Abonos Realizados" 
                                      onclick="mostrarPanelHistorialAbonosUnico('<%= Venta.Id_Venta %>','<%= Venta.Cliente %>','<%= Venta.Vendedor %>')" >
                                      <i class="fa-solid fa-receipt fa-lg" style="color: #ffffff;"></i>
                                    </button>
                                  <% } %>
                                </div>
                              </td>
                            </tr>
                          <% } else if(Tipo == 'Credito' && Venta.Tipo_Venta == 'Credito' ){ %>
                            <tr>
                              <td class="centrado">Venta al <%= Venta.Tipo_Venta %></td>
                              <td class="centrado"><%= Venta.Cliente %></td>
                              <td class="centrado"><%= Venta.Vendedor %></td>
                              <td class="centrado"><%= Venta.Fecha_Venta %></td>
                              <td class="centrado">C$ <%= Venta.Total_Venta %></td>
                              <td class="centrado"><%= Venta.Estado_Venta %></td>
                              <td class="centrado">
                                <div class="d-flex align-items-center justify-content-center">
                                  <button
                                    type="button"
                                    class="btn btn-success info-venta mx-1"
                                    title="Informacion de la venta"
                                    onclick="mostrarDetallesVenta('<%= Venta.Id_Venta %>','<%= Venta.Cliente %>','<%= Venta.Vendedor %>','<%= Venta.Fecha_Venta %>','<%= Venta.Total_Venta %>')">
                                    <i class="fa-solid fa-money-check-dollar"></i>
                                  </button>

                                  <% if (  Venta.Tipo_Venta  == 'Credito') { %>
                                    <button 
                                      type="button" 
                                      class="btn btn-primary mx-1" 
                                      title="Abonos Realizados" 
                                      onclick="mostrarPanelHistorialAbonosUnico('<%= Venta.Id_Venta %>','<%= Venta.Cliente %>','<%= Venta.Vendedor %>')" >
                                      <i class="fa-solid fa-receipt fa-lg" style="color: #ffffff;"></i>
                                    </button>
                                  <% } %>
                                </div>
                              </td>
                            </tr>
                          <% } else if(Tipo == 'Contado' && Venta.Tipo_Venta == 'Contado' ){ %>
                            <tr>
                              <td class="centrado">Venta al <%= Venta.Tipo_Venta %></td>
                              <td class="centrado"><%= Venta.Cliente %></td>
                              <td class="centrado"><%= Venta.Vendedor %></td>
                              <td class="centrado"><%= Venta.Fecha_Venta %></td>
                              <td class="centrado">C$ <%= Venta.Total_Venta %></td>
                              <td class="centrado"><%= Venta.Estado_Venta %></td>
                              <td class="centrado">
                                <button
