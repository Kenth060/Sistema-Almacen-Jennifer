                                <option value="Contado">Venta Contado</option>
                                <option value="Credito">Venta Credito</option>
                              </select>
                            
                              <!-- Formulario para Venta  -->
                              <div id="formularioCredito" style="display: none">
                                <form class="px-3 needs-validation" id="formVenta" novalidate>

                                  <label for="BuscarCliente" class="form-label mt-2" >Buscar un cliente</label>
                                  <div class="d-grid gap-2">
