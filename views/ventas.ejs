                                      <option value="2">
                                        Prendas de Vestir
                                      </option>
                                      <option value="3">Cosmeticos</option>
                                      <option value="4">
                                        Electrodomestico
                                      </option>
                                      <option value="5">
                                        Productos Plasticos
                                      </option>
                                    </select>
                                  </div>
                                  

                                </form>
                              </div>
