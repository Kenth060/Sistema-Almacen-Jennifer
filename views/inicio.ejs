                            <h6 class="mb-0"><b>C$ <%= venta.Total_Venta %></b></h6>
                          </div>
                          <div class="col-6 text-end">
                            <small><b><%= venta.Fecha_Venta %></b></small>
                          </div>
                        </div>
                        <div class="row align-items-center mt-2">
                          <div class="col-6 text-start">
                            <small class="text-muted">Cliente: <%= venta.Cliente %></small>
                          </div>
                          <div class="col-6 text-end">
                            <small class="text-muted">Vendedor: <%= venta.Vendedor %></small>
                          </div>
                        </div>
                      </div>
                    </div>

  
