    <script>
      var valores = JSON.parse("<%- JSON.stringify(VentaContado.map(venta => venta.Total_Ventas)) %>");
      var labels = <%- JSON.stringify(VentaContado.map(venta => venta.Mes)) %>; 
      var ctx = document.getElementById("myChart").getContext("2d");

      var myChart = new Chart(ctx, {
        type: "bar",
        data: {
          labels: labels,
          datasets: [
            {
              label: "Meses Anteriores",
              data: valores,
              backgroundColor: ["#12C9E5", "#12C9E5", "#12C9E5", "#12C9E5", "#111B54"],
              maxBarThickness: 30,
              maxBarLength: 2,
            },
          ],
        },
        options: {
          
          scales: {
            yAxes: [
              {
                ticks: {
                  beginAtZero: true,
                },
              },
            ],
          },
        },
      });
    </script>

    <script>
