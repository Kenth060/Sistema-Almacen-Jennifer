    <script
      src="https://cdn.jsdelivr.net/npm/chart.js@2.9.3/dist/Chart.min.js"
      integrity="sha256-R4pqcOYV8lt7snxMQO/HSbVCFRPMdrhAFMH+vr9giYI="
      crossorigin="anonymous"
    ></script>

    <script>
      var valores = JSON.parse("<%- JSON.stringify(VentaContado.map(venta => venta.Cantidad_Ventas)) %>");
      var labels = <%- JSON.stringify(VentaContado.map(venta => venta.Mes)) %>; 
      var ctx = document.getElementById("myChart").getContext("2d");
      var myChart = new Chart(ctx, {
        type: "bar",
        data: {
          labels: labels,
          datasets: [
            {
              label: "Meses Anteriores",
              data: valores,
              backgroundColor: ["#12C9E5", "#12C9E5", "#12C9E5", "#12C9E5", "#111B54"],
              maxBarThickness: 30,
              maxBarLength: 2,
            },
          ],
        },
        options: {
          scales: {
            yAxes: [
              {
                ticks: {
                  beginAtZero: true,
                },
              },
            ],
          },
        },
      });
    </script>

    <script>
      var valores = JSON.parse("<%- JSON.stringify(VentaCredito.map(venta => venta.Cantidad_Ventas)) %>");
      var labels = <%- JSON.stringify(VentaCredito.map(venta => venta.Mes)) %>; 

      var ctx = document.getElementById("myChart2").getContext("2d");
      var myChart = new Chart(ctx, {
        type: "bar",
        data: {
          labels: labels,
          datasets: [
            {
              label: "Ventas de meses anteriores",
              data: valores,
              backgroundColor: ["#12C9E5", "#12C9E5", "#12C9E5", "#111B54"],
              maxBarThickness: 30,
              maxBarLength: 2,
            },
          ],
        },
        options: {
          scales: {
            yAxes: [
              {
                ticks: {
                  beginAtZero: true,
                },
              },
            ],
          },
        },
      });
    </script>

    <script>
      function SeeALL()
      { window.location = '/ventas';}
    </script>

    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <% if (Mensaje) { %>
      <script>
          document.addEventListener('DOMContentLoaded', function() {
              Swal.fire({
                  icon: 'error',
                  title: 'Accesso Denegado',
                  text: '<%= Mensaje %>',
                  timer:1500,
                  showConfirmButton:false
              });
          });
      </script>
