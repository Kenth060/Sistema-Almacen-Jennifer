<!DOCTYPE html>
<html lang="es" dir="ltr">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Productos</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous"/>
    <link href="https://unpkg.com/boxicons@2.0.7/css/boxicons.min.css" rel="stylesheet"/>
    <link rel="stylesheet" href="/resources/css/style.css" />
    <link rel="shortcut icon" href="/resources/images/favicon.ico">
  </head>
  <body>
    <%- include('sidebar.ejs') %>
    <section class="home-section">
      <div class="Container px-3">
        <div class="row">
          <div class="col-sm-12 col-md-4 col-lg-4 col-xl-4">
            <h3><b>Actualizar Producto</b></h3>
            <br />
            <div class="mb-1">
              <label for="text" class="form-label"><b>Categoria del producto</b></label>
            </div>

            <select class="form-select" aria-label="Seleccione una categoria" id="categoria"   required>
              <option value="0">Seleccione una categoria</option>
              <% if ( Producto.Categoria == 'Calzado') { %>
              <option value="1" selected>Calzado</option>
              <% } else { %>
              <option value="1">Calzado</option>
              <% } %> <% if ( Producto.Categoria == 'Prendas de Vestir') { %>
              <option value="2" selected>Prendas de Vestir</option>
              <% } else { %>
              <option value="2">Prendas de Vestir</option>
              <% } %> <% if ( Producto.Categoria == 'Cosmeticos') { %>
              <option value="3" selected>Cosmeticos</option>
              <% } else { %>
              <option value="3">Cosmeticos</option>
              <% } %> <% if ( Producto.Categoria == 'Electrodomesticos') { %>
              <option value="4" selected>Electrodomesticos</option>
              <% } else { %>
              <option value="4">Electrodomesticos</option>
              <% } %> <% if ( Producto.Categoria == 'Productos_Plasticos' ||  Producto.Categoria == 'Productos Plasticos' ) { %>
              <option value="5" selected>Productos Plasticos</option>
              <% } else { %>
              <option value="5">Productos Plasticos</option>
              <% } %>
            </select>

            <form action="/UpdateProduct" method="post" class="row g-3 py-3 needs-validation" novalidate>

              <!-- Marca -->
              <div class="col-md-6">
                <label for="Marca" id="Marcalb" class="form-label">Marca</label>
                <input type="text" class="form-control" id="Marca" name="Marca" value="<%= Producto.Marca %>" required>
                <div class="invalid-feedback">Por favor ingrese la marca del producto</div>
                <input type="text" class="form-control" id="Id_Prod" name="Id_Prod"  value="<%= Producto.Id_Producto %>" hidden />
                <input type="text" class="form-control" id="Categoria_Prod" value="<%= Producto.Categoria %>" name="Categoria_Prod" hidden>
              </div>

              <!-- Tipo -->
              <div class="col-md-6">
                <label for="Tipo" class="form-label">Tipo de producto</label>
                <input type="text" class="form-control" id="Tipo" name="Tipo" value="<%= Producto.Tipo %>" required>
                <div class="invalid-feedback">Por favor ingrese el Tipo de producto</div>
              </div>

              <!-- Color -->
              <div class="col-md-6">
                <label for="Color" class="form-label">Color del producto</label>
                <input type="text" class="form-control" id="Color" name="Color" value="<%= Producto.Color %>" required>
                <div class="invalid-feedback">Por favor ingrese el Color del producto</div>
              </div>

              <!-- Talla -->
              <div class="col-md-6" id="Talladiv">
                <label for="Talla" id="Tallalb" class="form-label">Talla del producto</label>
                <input type="text" class="form-control" id="Talla" name="Talla" value="<%= Producto.Talla %>"   required>
                <div class="invalid-feedback">Por favor ingrese la talla del producto</div>
              </div>

              <!-- Modelo -->
              <div class="col-md-6" id="Modelodiv">
                <label for="Modelo" id="Modelolb" class="form-label">Modelo del producto</label>
                <input type="text" class="form-control" id="Modelo" name="Modelo" value="<%= Producto.Modelo %>" required>
                <div class="invalid-feedback">Por favor ingrese el Modelo del producto</div>
              </div>


              <!-- Clasificación y Fecha Vencimiento -->
              <div id="Cosmeticos" class="container">
                <div class="row">

                  <div class="col-md-6" id="Clasificaciondiv">
                    <label for="Clasificacion" id="Clasificacionlb" class="form-label">Clasificacion</label>
                    <input type="text" class="form-control" id="Clasificacion" name="Clasificacion" value="<%= Producto.Clasificacion %>" required>
                    <div class="invalid-feedback">Por favor ingrese la Clasificación del producto</div>
                  </div>

                  <div class="col-md-6" >
                    <label id="FechaVencimientolb"for="FechaVencimiento" class="form-label">Fecha de Vencimiento</label>
                    <input type="date" class="form-control" id="FechaVencimiento" name="Fecha_Vencimiento" value="<%= Producto.Fecha_Vencimiento %>" required>
                    <div class="invalid-feedback">Por favor ingrese la fecha de vencimiento del producto</div>
                  </div>

                </div>
              </div> 

              <!-- Dimensiones  -->
              <div id="plasticos" class="container">
                <div class="row">
                  <div class="col-md-6">
                    <label for="Dimensiones" id="Dimensioneslb" class="form-label">Dimensiones del Producto</label>
                    <input type="text" class="form-control" id="Dimensiones" name="Dimensiones" value="<%= Producto.Dimensiones %>" required>
                    <div class="invalid-feedback">Por favor ingrese las dimensiones del producto</div>  
                  </div>

                  <div class="col-md-6">
                    <label for="UnidadMedida" id="UnidadMedidalb" class="form-label">Unidad de Medida de las Dimensiones</label>
                    <input type="text" class="form-control" id="UnidadMedida" name="Unidad_Medida" value="<%= Producto.Unidad_Medida %>" required>
                    <div class="invalid-feedback">Por favor ingrese la unidad de medida de las dimensiones del producto</div>
                  </div>

                </div>
              </div> 
              
            
              
              
              
              



              <div class="d-grid gap-2">
                <button type="submit" class="btn btn-success">Editar</button>
              </div>
            </form>
          </div>

          <div class="col-sm-12 col-md-8 col-lg-8 col-xl-8">
            <h2>Listado de <%= Producto.Categoria %></h2>
            <table class="table primary">
              <thead>
                <tr>
                  <th class="centrado">Producto</th>
                </tr>
              </thead>
                <tbody>
                  <tr>
                    <td class="centrado"><%= Producto.Descripcion %></td>
                  </tr>
                </tbody>
            </table>
          </div>
        </div>
      </div>
    </section>

    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="/resources/js/script.js"></script>
    <script src="/resources/js/ScriptProducts.js"></script>

        <!-- codigo js para las validaciones-->
        <script>
          // Example starter JavaScript for disabling form submissions if there are invalid fields
          (() => {
            "use strict";
    
            // Fetch all the forms we want to apply custom Bootstrap validation styles to
            const forms = document.querySelectorAll(".needs-validation");
    
            // Loop over them and prevent submission
            Array.from(forms).forEach((form) => {
              form.addEventListener(
                "submit",
                (event) => {
                  if (!form.checkValidity()) {
                    event.preventDefault();
                    event.stopPropagation();
                  }
    
                  form.classList.add("was-validated");
                },
                false
              );
            });
          })();
        </script>

    <% if (typeof alert != "undefined") { %>
    <script>
      Swal.fire({
        title: "<%= alertTitle %>",
        text: "<%= alertMessage %>",
        icon: "<%= alertIcon %>",
        showConfirmButton: true,
        timer: false,
      }).then(() => {
        window.location = '/ShowProducts/<%= cat %>'
      });
    </script>
    <% } %>
  </body>
</html>
