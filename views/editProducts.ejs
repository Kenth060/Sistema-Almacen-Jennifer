<!DOCTYPE html>
<html lang="es" dir="ltr">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Productos</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous"/>
    <link href="https://unpkg.com/boxicons@2.0.7/css/boxicons.min.css" rel="stylesheet"/>
    <link rel="stylesheet" href="/resources/css/style.css" />
  </head>
  <body>
    <%- include('sidebar.ejs') %>
    <section class="home-section">
      <div class="Container px-3">
        <div class="row">
          <div class="col-sm-12 col-md-4 col-lg-4 col-xl-4">
            <h3><b>Registro de productos</b></h3>
            <br />
            <div class="mb-3">
              <label for="text" class="form-label"><b>Seleccione la categoria del producto a a√±adir</b></label>
            </div>

            <select class="form-select" aria-label="Seleccione una categoria" id="categoria" required>
              <option value="0">Seleccione una categoria</option>
              <% if ( Producto.Nombre_Categoria == 'Calzado') { %>
              <option value="1" selected>Calzado</option>
              <% } else { %>
              <option value="1">Calzado</option>
              <% } %> <% if ( Producto.Nombre_Categoria == 'Prendas_Vestir' || Producto.Nombre_Categoria == 'Prendas de Vestir') { Categoria= 'Prendas de Vestir' %>
              <option value="2" selected>Prendas de Vestir</option>
              <% } else { %>
              <option value="2">Prendas de Vestir</option>
              <% } %> <% if ( Producto.Nombre_Categoria == 'Cosmeticos') { %>
              <option value="3" selected>Cosmeticos</option>
              <% } else { %>
              <option value="3">Cosmeticos</option>
              <% } %> <% if ( Producto.Nombre_Categoria == 'Electrodomesticos') { %>
              <option value="4" selected>Electrodomesticos</option>
              <% } else { %>
              <option value="4">Electrodomesticos</option>
              <% } %> <% if ( Producto.Nombre_Categoria == 'Productos_Plasticos' || Producto.Nombre_Categoria == 'Productos Plasticos') { Categoria = 'Productos Plasticos' %>
              <option value="5" selected>Productos Plasticos</option>
              <% } else { %>
              <option value="5">Productos Plasticos</option>
              <% } %>
            </select>

            <form action="/UpdateProduct" method="post" class="row g-3 py-3">
              <div class="col-md-6">
                <label for="Marca" id="Marcalb" class="form-label">Marca</label>
                <input type="text" class="form-control" id="Marca" name="Marca" required value="<%= Producto.Marca %>"/>
                <input type="text" class="form-control" id="Id_Prod" name="Id_Prod"  value="<%= Producto.Id_Producto %>" hidden/>
                <input type="text" class="form-control" id="Id_Cat" name="Id_Cat"  value="<%= Producto.Id_Categoria %>" hidden/>
                <input type="text" class="form-control" id="p_cat" name="p_cat"  value="<%= p_cat %>" hidden/>
                <input type="text" class="form-control" id="Categoria_Prod" name="Categoria_Prod"  value="<%= Producto.Nombre_Categoria %>" hidden/>
              </div>

              <div class="col-md-6">
                <label for="Existencia" class="form-label">Existencia del producto</label>
                <input type="number" class="form-control" id="Existencia" name="Existencia" value="<%= Producto.Existencia %>"/>
              </div>

              <div class="col-md-6">
                <label for="Precio" class="form-label">Precio del Producto</label>
                <input type="number" class="form-control" id="Precio" name="Precio" required value="<%= Producto.Precio %>"/>
              </div>

              <div class="col-md-6">
                <label for="Color" class="form-label">Color del producto</label>
                <input type="text" class="form-control" id="Color" name="Color" required value="<%= Producto.Color %>"/>
              </div>

              <div class="col-md-6">
                <label for="Tipo" class="form-label">Tipo de producto</label>
                <input type="text" class="form-control" id="Tipo" name="Tipo" required value="<%= Producto.Tipo %>"/>
              </div>

              <div class="col-md-6">
                <label for="FechaIngreso" class="form-label">Fecha de Ingreso</label>
                <input type="date" class="form-control" id="FechaIngreso" name="Fecha" required value="<%= Producto.Fecha_Ingreso %>"/>
              </div>
              
              <div class="col-md-6">
                <label for="Talla" id="Tallalb" class="form-label">Talla del producto</label>
                <input type="text" class="form-control" id="Talla" name="Talla" value="<%= Producto.Talla %>"/>
              </div>
              
              <div class="col-md-6">
                <label for="Modelo" id="Modelolb" class="form-label">Modelo del producto</label>
                <input type="text" class="form-control" id="Modelo" name="Modelo" value="<%= Producto.Modelo %>"/>
              </div>

              <div class="col-md-6">
                <label for="Clasificacion" id="Clasificacionlb" class="form-label">Clasificacion</label>
                <input type="text" class="form-control" id="Clasificacion" name="Clasificacion" value="<%= Producto.Clasificacion %>"/>

                <label for="Dimensiones" id="Dimensioneslb" class="form-label" >Dimensiones</label>
                <input type="text" class="form-control" id="Dimensiones" name="Dimensiones" value="<%= Producto.Dimensiones %>"/>

                <label for="UnidadMedida" id="UnidadMedidalb" class="form-label">Unidad de Medida</label>
                <input type="text" class="form-control" id="UnidadMedida" name="Unidad_Medida" value="<%= Producto.Unidad_de_Medida %>"/>
              </div>

              <div class="d-grid gap-2">
                <Button type="submit" class="btn btn-success">Editar</Button>
                <Button class="btn btn-secondary">Limpiar Campos</Button>
              </div>
            </form>
          </div>

          <div class="col-sm-12 col-md-8 col-lg-8 col-xl-8">
            <h2>Listado de <%= Producto.Nombre_Categoria %></h2>
            <table class="table primary">
              <thead>
                <tr>
                  <th class="centrado">Producto</th>
                  <th class="centrado">Precio</th>
                  <th class="centrado">Stock</th>
                  <th class="centrado">Fecha Ingreso</th>
                </tr>
              </thead>
                <tbody>
                  <tr>
                    <td class="centrado"><%= Producto.Productos %></td>
                    <td class="centrado"><%= Producto.Precio %></td>
                    <td class="centrado"><%= Producto.Existencia %></td>
                    <td class="centrado"><%= Producto.Fecha_Ingreso %></td>

                  </tr>
                </tbody>
            </table>
          </div>
        </div>
      </div>
    </section>

    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="/resources/js/script.js"></script>
    <script src="/resources/js/ScriptProducts.js"></script>

    <% if (typeof alert != "undefined") { %>
    <script>
      Swal.fire({
        title: "<%= alertTitle %>",
        text: "<%= alertMessage %>",
        icon: "<%= alertIcon %>",
        showConfirmButton: true,
        timer: false,
      }).then(() => {
        window.location = "/<%= ruta %>";
      });
    </script>
    <% } %>
  </body>
</html>
